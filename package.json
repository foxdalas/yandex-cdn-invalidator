{
  "name": "yandex-cdn-invalidator",
  "version": "1.0.0",
  "description": "GitHub Action to purge Yandex Cloud CDN cache",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run format && npm run package",
    "package": "ncc build src/index.js --source-map --license licenses.txt -o dist",
    "format": "prettier --write '**/*.{js,json,md,yml,yaml}'",
    "format:check": "prettier --check '**/*.{js,json,md,yml,yaml}'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foxdalas/yandex-cdn-invalidator.git"
  },
  "keywords": [
    "yandex-cloud",
    "cdn",
    "cache",
    "invalidation",
    "github-actions",
    "purge",
    "yandex"
  ],
  "author": "Maksim Pogozhii",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "axios": "^1.6.5",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
